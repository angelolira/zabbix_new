#!/bin/bash
set -e
clear

# ========================
# Vari√°veis
# ========================
CONF_AGENT1_URL="https://raw.githubusercontent.com/angelolira/zabbix_new/refs/heads/main/Linux/zabbix/zabbix_agentd.conf"
CONF_AGENT2_URL="https://raw.githubusercontent.com/angelolira/zabbix_new/refs/heads/main/Linux/zabbix/zabbix_agent2.conf"

CONF_AGENT1_MARINGA_URL="https://raw.githubusercontent.com/angelolira/zabbix_new/refs/heads/main/Linux/zabbix/zabbix_agentMGA.conf"
CONF_AGENT2_MARINGA_URL="https://raw.githubusercontent.com/angelolira/zabbix_new/refs/heads/main/Linux/zabbix/zabbix_agent2MGA.conf"

CONF_AGENT1="zabbix_agentd.conf"
CONF_AGENT2="zabbix_agent2.conf"

ZABBIX_DIR="/etc/zabbix"
SUDOERS_FILE="/etc/sudoers.d/zabbix"
SUDOERS_LINE="zabbix ALL=(root) NOPASSWD: /bin/systemctl start httpd, /bin/systemctl stop httpd, /bin/systemctl restart httpd, /bin/systemctl status httpd"

# ========================
# Fun√ß√µes utilit√°rias
# ========================
require_root() {
    [[ "$(id -u)" == "0" ]] || { echo "‚ùå Execute este script como root."; exit 1; }
}

detect_os() {
    source /etc/os-release
    OS_ID="$ID"
    OS_VERSION="$VERSION_ID"
}

pkg_install() {
    case "$OS_VERSION" in
        6*|7*) yum install -y "$@";;
        8*|9*) dnf install -y "$@";;
    esac
}

pkg_remove() {
    case "$OS_VERSION" in
        6*|7*) yum remove -y "$@";;
        8*|9*) dnf remove -y "$@";;
    esac
}

service_enable() {
    [[ "$OS_VERSION" == 6* ]] && chkconfig "$1" on || systemctl enable "$1"
}

service_restart() {
    [[ "$OS_VERSION" == 6* ]] && service "$1" restart || systemctl restart "$1"
}

add_zabbix_sudoers() {
    if ! id zabbix &>/dev/null; then
        echo "üë§ Criando usu√°rio zabbix..."
        useradd -r -s /sbin/nologin zabbix
    fi

    if [[ ! -f "$SUDOERS_FILE" ]]; then
        echo "‚úç Criando regra sudoers..."
        echo "$SUDOERS_LINE" > "$SUDOERS_FILE"
        chmod 440 "$SUDOERS_FILE"
        visudo -cf "$SUDOERS_FILE" && echo "‚úî Sudoers validado"
    else
        echo "‚Ñπ Regra sudoers j√° existe"
    fi
}

# ========================
# Instala√ß√£o
# ========================
install_agent1() {
    echo "‚û° Instalando Zabbix Agent (cl√°ssico)"

    case "$OS_VERSION" in
        6*) rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/6/x86_64/zabbix-release-6.0-4.el6.noarch.rpm;;
        7*) rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/7/x86_64/zabbix-release-6.0-4.el7.noarch.rpm;;
        8*) rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/8/x86_64/zabbix-release-6.0-4.el8.noarch.rpm;;
        9*) rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/9/x86_64/zabbix-release-6.0-4.el9.noarch.rpm;;
    esac

    pkg_install zabbix-agent
    service_enable zabbix-agent
    service_restart zabbix-agent

    if [[ "$SITE" == "MARINGA" ]]; then
        CONF_URL="$CONF_AGENT1_MARINGA_URL"
        curl -fsSLo "/root/$CONF_AGENT1" "$CONF_URL"
        cp -f "/root/$CONF_AGENT1" "$ZABBIX_DIR/$CONF_AGENT1"
    else
        echo "‚Ñπ Timb√≥: mantendo conf original"
    fi
}

install_agent2() {
    echo "‚û° Instalando Zabbix Agent 2"

    case "$OS_VERSION" in
        6*) echo "‚ùå Agent2 n√£o suporta RHEL 6"; exit 1;;
        7*) rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/7/x86_64/zabbix-release-6.0-4.el7.noarch.rpm;;
        8*) rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/8/x86_64/zabbix-release-6.0-4.el8.noarch.rpm;;
        9*) rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/9/x86_64/zabbix-release-6.0-4.el9.noarch.rpm;;
    esac

    pkg_install zabbix-agent2
    service_enable zabbix-agent2
    service_restart zabbix-agent2

    if [[ "$SITE" == "MARINGA" ]]; then
        CONF_URL="$CONF_AGENT2_MARINGA_URL"
        curl -fsSLo "/root/$CONF_AGENT2" "$CONF_URL"
        cp -f "/root/$CONF_AGENT2" "$ZABBIX_DIR/$CONF_AGENT2"
    else
        echo "‚Ñπ Timb√≥: mantendo conf original"
    fi
}

# ========================
# Remo√ß√£o
# ========================
zabbix_remove() {
    echo "üóë Removendo Zabbix..."
    pkg_remove zabbix-agent zabbix-agent2 zabbix-release || true
    rm -rf "$ZABBIX_DIR" "$SUDOERS_FILE"
    echo "‚úÖ Zabbix removido."
}

# ========================
# Menus
# ========================
choose_site() {
    echo
    echo "Selecione a localidade:"
    echo "1 - MARING√Å"
    echo "2 - TIMB√ì"
    read -rp "Escolha: " site_opt

    case "$site_opt" in
        1) SITE="MARINGA";;
        2) SITE="TIMBO";;
        *) echo "Op√ß√£o inv√°lida"; sleep 2; choose_site;;
    esac
}

zabbix_install_menu() {
    echo
    echo "Qual vers√£o deseja instalar?"
    echo "1 - Zabbix Agent (cl√°ssico)"
    echo "2 - Zabbix Agent 2"
    read -rp "Escolha: " agent_opt

    choose_site

    case "$agent_opt" in
        1) install_agent1;;
        2) install_agent2;;
        *) echo "Op√ß√£o inv√°lida"; sleep 2; zabbix_install_menu;;
    esac

    add_zabbix_sudoers
    echo "üéâ Zabbix instalado para o site: $SITE"
}

main_menu() {
    require_root
    detect_os

    clear
    echo "==============================="
    echo "   INSTALADOR ZABBIX"
    echo "==============================="
    echo "Sistema: $OS_ID $OS_VERSION"
    echo
    echo "1 - Instalar Zabbix"
    echo "2 - Remover Zabbix"
    echo "0 - Sair"
    read -rp "Escolha: " opt

    case "$opt" in
        1) zabbix_install_menu;;
        2) zabbix_remove;;
        0) exit 0;;
        *) echo "Op√ß√£o inv√°lida"; sleep 2; main_menu;;
    esac
}

main_menu
