#!/bin/bash
set -e

clear

# ========================
# Vari√°veis
# ========================
ARQUIVO_CONF_URL="https://raw.githubusercontent.com/angelolira/zabbix_new/refs/heads/main/Linux/zabbix/zabbix_agentd.conf"
ARQUIVO_CONF="zabbix_agentd.conf"
ZABBIX_BIN="/usr/sbin/zabbix_agentd"
ZABBIX_DIR="/etc/zabbix"

# ========================
# Fun√ß√µes utilit√°rias
# ========================
require_root() {
    if [[ "$(id -u)" != "0" ]]; then
        echo "‚ùå Execute este script como root."
        exit 1
    fi
}

detect_os() {
    if [[ -f /etc/os-release ]]; then
        source /etc/os-release
        OS_ID="$ID"
        OS_VERSION="$VERSION_ID"
    elif [[ -f /etc/redhat-release ]]; then
        OS_ID="rhel"
        OS_VERSION=$(sed 's/.*release \([0-9]\).*/\1/' /etc/redhat-release)
    else
        echo "‚ùå N√£o foi poss√≠vel detectar o sistema operacional."
        exit 1
    fi
}

pkg_install() {
    case "$OS_VERSION" in
        6*) yum install -y "$@";;
        7*) yum install -y "$@";;
        8*) dnf install -y "$@";;
        9*) dnf install -y "$@";;
    esac
}

service_enable() {
    case "$OS_VERSION" in
        6*) chkconfig zabbix-agent on;;
        *)  systemctl enable zabbix-agent;;
    esac
}

service_restart() {
    case "$OS_VERSION" in
        6*) service zabbix-agent restart;;
        *)  systemctl restart zabbix-agent;;
    esac
}

# ========================
# Zabbix
# ========================
zabbix_install() {
    echo "üîé Detectando sistema..."
    detect_os

    if [[ "$OS_ID" != "rhel" && "$OS_ID" != "centos" ]]; then
        echo "‚ùå Sistema n√£o suportado: $OS_ID"
        exit 1
    fi

    echo "‚úî Sistema detectado: $OS_ID $OS_VERSION"

    if [[ -x "$ZABBIX_BIN" ]]; then
        echo "‚ö† Zabbix j√° instalado. Atualizando..."
    fi

    case "$OS_VERSION" in
        6*)
            rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/6/x86_64/zabbix-release-6.0-4.el6.noarch.rpm
            pkg_install zabbix-agent
            ;;
        7*)
            rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/7/x86_64/zabbix-release-6.0-4.el7.noarch.rpm
            pkg_install zabbix-agent
            ;;
        8*)
            rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/8/x86_64/zabbix-release-6.0-4.el8.noarch.rpm
            pkg_install zabbix-agent
            ;;
        9*)
            rpm -Uvh https://repo.zabbix.com/zabbix/6.0/rhel/9/x86_64/zabbix-release-6.0-4.el9.noarch.rpm
            pkg_install zabbix-agent
            ;;
        *)
            echo "‚ùå Vers√£o do SO n√£o suportada: $OS_VERSION"
            exit 1
            ;;
    esac

    mkdir -p "$ZABBIX_DIR"
    cd /root
    curl -fsSLO "$ARQUIVO_CONF_URL"
    cp -f "$ARQUIVO_CONF" "$ZABBIX_DIR/"

    service_enable
    service_restart

    echo "‚úÖ Zabbix Agent instalado e configurado com sucesso!"
}

zabbix_remove() {
    detect_os
    echo "üóë Removendo Zabbix Agent..."

    case "$OS_VERSION" in
        6*|7*) yum remove -y zabbix-agent zabbix-release;;
        8*|9*) dnf remove -y zabbix-agent zabbix-release;;
    esac

    rm -rf "$ZABBIX_DIR"
    echo "‚úÖ Zabbix removido."
}

# ========================
# Menu
# ========================
main_menu() {
    require_root
    clear
    echo "==============================="
    echo "   INSTALADOR ZABBIX AGENT"
    echo "==============================="
    echo "1 - Instalar / Atualizar"
    echo "2 - Remover"
    echo "0 - Sair"
    echo
    read -rp "Escolha uma op√ß√£o: " opt

    case "$opt" in
        1) zabbix_install;;
        2) zabbix_remove;;
        0) exit 0;;
        *) echo "Op√ß√£o inv√°lida"; sleep 2; main_menu;;
    esac
}

main_menu
